@model IEnumerable<ProjectWebsite.Models.PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<!-- Slide -->
<div class="fullwidthbanner-container">
    <div class="fullwidthbanner">
        <ul>
            <li data-transition="premium-random" data-slotamount="3">
                <img src="~/Content/images/Slider/Slide1.png" alt="slider img" width="1400" height="377">
            </li>
            <li data-transition="premium-random" data-slotamount="3">
                <img src="~/Content/images/Slider/Slide2.png" alt="slider img" width="1400" height="377">
            </li>
            <li data-transition="premium-random" data-slotamount="3">
                <img src="~/Content/images/Slider/Slide3.jpg" alt="slider img" width="1400" height="377">
            </li>
            <li data-transition="premium-random" data-slotamount="3">
                <img src="~/Content/images/Slider/Slide4.png" alt="slider img" width="1400" height="377">
            </li>
        </ul>
        <div class="tp-bannertimer"></div>
    </div>



    <div id="sliderRevLeft"><i class="icon-chevron-left"></i></div>
    <div id="sliderRevRight"><i class="icon-chevron-right"></i></div>
</div>
<!-- Slide -->
<div class="container">
    <!-- Button -->
    <div class="row">
        <div class="span12">
            <div class="push-up over-slider blocks-spacer">
                <div class="row">
                    <div class="span4">
                        <a href="#" class="btn btn-block banner">
                            <span class="title"><span class="light">MÙA HÈ</span> KHÔNG NÓNG</span>
                            <em>Giảm 10% cho các sản phẩm trong shop</em>
                        </a>
                    </div>
                    <div class="span4">
                        <a href="#" class="btn btn-block colored banner">
                            <span class="title"><span class="light">MIỄN PHÍ</span> GIAO HÀNG</span>
                            <em>Áp dụng cho các hóa đơn từ 500.000 trở lên</em>
                        </a>
                    </div>
                    <div class="span4">
                        <a href="#" class="btn btn-block banner">
                            <span class="title"><span class="light">SẢN PHẨM </span> MỚI VỀ</span>
                            <em>Số lượng có hạn chất lượng miễn bàn!!</em>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Button -->
    <!-- Featured Products -->
    <div class="row featured-items blocks-spacer">
        <div class="span12">
            <div class="main-titles lined">
                <h2 class="title"><span class="light">SẢN PHẨM</span> ĐẶC BIỆT</h2>
                <div class="arrows">
                    <a href="#" class="icon-chevron-left" id="featuredItemsLeft"></a>
                    <a href="#" class="icon-chevron-right" id="featuredItemsRight"></a>
                </div>
            </div>
        </div>
        <div class="span12">
            <div class="carouFredSel" data-autoplay="false" data-nav="featuredItems">
                <div class="slide">
                    @Html.Action("GetProductEspecially", "Home")
                </div>
            </div>
        </div>
    </div>
    <!-- End Featured Products -->
</div>
<!-- New Products in the Shop -->
<div class="boxed-area blocks-spacer">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="main-titles lined">
                    <h2 class="title"><span class="light">Sản phẩm</span> Mới</h2>
                </div>
            </div>
        </div>
        <div class="row popup-products blocks-spacer">
            @Html.Action("GetNewProduct", "Home")
        </div>
    </div>
</div>
<!-- End New Products in the Shop -->
<!-- Most Popular Products-->
<div class="most-popular blocks-spacer">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="main-titles lined">
                    <h2 class="title"><span class="light">Sản phẩm</span> được mua nhiều</h2>
                </div>
            </div>
        </div>
        <div class="row popup-products">
            <!---->
            @Html.Action("GetProductMost", "Home")
        </div>

    </div>
</div>
<!--End Most Popular Products -->
<!-- Thanh điều hướng-->
<div class="darker-stripe blocks-spacer more-space latest-news with-shadows">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="main-titles center-align">
                    <h2 class="title">
                        <span class="clickable icon-chevron-left" id="tweetsLeft"></span> &nbsp;&nbsp;&nbsp;
                        <span class="light">Trang trước</span> Trang Sau &nbsp;&nbsp;&nbsp;
                        <span class="clickable icon-chevron-right" id="tweetsRight"></span>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Thanh điều hướng-->
<!-- Thương hiệu -->
<div class="container blocks-spacer-last">

    <div class="row">
        <div class="span12">
            <div class="main-titles lined">
                <h2 class="title"><span class="light">Thương hiệu</span> Sản phẩm của chúng tôi</h2>
                <div class="arrows">
                    <a class="clickable  icon-chevron-left" id="brandsLeft"></a>
                    <a class="clickable  icon-chevron-right" id="brandsRight"></a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <div class="brands  carouFredSel" data-nav="brands" data-autoplay="true">
                <a href="#"><img src="~/Content/images/brands/brands_01.jpg" alt="" width="203" height="104"></a>
                <a href="#"><img src="~/Content/images/brands/brands_02.jpg" alt="" width="203" height="104"></a>
                <a href="#"><img src="~/Content/images/brands/brands_03.jpg" alt="" width="203" height="104"></a>
                <a href="#"><img src="~/Content/images/brands/brands_04.jpg" alt="" width="203" height="104"></a>
                <a href="#"><img src="~/Content/images/brands/brands_05.jpg" alt="" width="203" height="104"></a>
                <a href="#"><img src="~/Content/images/brands/brands_06.jpg" alt="" width="203" height="104"></a>
            </div>
        </div>
    </div>
</div>
<!-- End Thương hiệu -->


