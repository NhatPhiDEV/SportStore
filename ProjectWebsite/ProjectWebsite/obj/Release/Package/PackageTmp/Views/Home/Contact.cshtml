                <section class="contact-form-container">
                    <h3 class="push-down-25"><span class="light">Gửi</span> Tin Nhắn Cho Chúng Tôi</h3>
                    <form id="commentform" method="post" action="#" class="form form-inline form-contact">
                        <p class="push-down-20">
                            <input type="text" aria-required="true" tabindex="1" size="30" value="" id="author" name="author" placeholder="Tên đầy đủ của bạn..." required=required />
                        </p>
                        <p class="push-down-20">
                            <input type="email" aria-required="true" tabindex="2" size="30" value="" id="author" name="author" placeholder="Email liên hệ của bạn..." required=required />
                        </p>
                        <p class="push-down-20">
                            <input type="text" tabindex="3" size="30" value="" id="url" name="url" placeholder="Trang web của bạn nếu có thể..." />
                        </p>
                        <p class="push-down-20">
                            <textarea class="input-block-level" tabindex="4" rows="7" cols="70" id="comment" name="comment" placeholder="Hãy cho chúng tôi biết cảm nghĩ của bạn về chúng tôi..." required=required></textarea>
                        </p>
                        <p>
                            <button class="btn btn-primary bold" type="submit" tabindex="5" id="submit">GỬI CHO CHÚNG TÔI</button>
                        </p>
                    </form>
