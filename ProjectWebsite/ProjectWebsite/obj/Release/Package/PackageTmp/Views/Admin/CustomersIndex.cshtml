                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Tài khoản</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Liên lạc</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Email</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody id="tblCustomers">
                                    
                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-12" style="margin:0px;">
                            <div class="span6 col-lg-offset-6">
                                <div class="dataTables_paginate paging_bootstrap pagination" style="margin:0px;padding:0px">
                                    <ul id="pageNumber">
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
