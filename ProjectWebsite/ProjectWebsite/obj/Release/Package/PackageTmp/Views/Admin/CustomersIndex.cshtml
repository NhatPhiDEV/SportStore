<section id="main-content">
    <section class="wrapper site-min-height">
        <section class="panel" style="margin-bottom:0px">
            <header class="panel-heading" style="color:black;font-weight:bold;padding-bottom:0px;text-align:center;font-size:30px">
                Dữ liệu thông tin khách hàng
            </header>
            <div class="panel-body" style="margin-top:0px;min-height: 800px;">
                <div class="adv-table editable-table">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-1" style="padding-top:15px;padding-left:0">
                                <button class="btn dropdown-toggle" data-toggle="dropdown">
                                    Chức năng mở rộng <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Print</a></li>
