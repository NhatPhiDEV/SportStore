@foreach (var item in Model)
{  
<div class="item-in-cart clearfix">
    <div class="image">
        <img src="~/Content/images/@item.ProductImage" width="124" height="124" alt="cart item">
    </div>
    @using (Html.BeginForm("EditCart", "Cart", new { @ID = item.ProductID }))
    {
        <div class="desc">
            <strong><a href="@Url.Action("getDetail", "Home", new { id = item.ProductID })" ; style="font-size:14px;text-decoration:none;">@item.ProductName</a></strong>
            <span class="light-clr qty">
                <a style="font-size:13px;">Số Lượng:<input type="number" name="txtCount" class="Phideptrai" style="padding-right:2px;height:15px;text-align:center;font-size:16px;width: 40px;vertical-align: middle;" min="1" ; value="@item.ProductCount"></a>
                <a style="font-size:13px;">Size:</a>
                <select name="size" style="height: 35px; width: 60px; font-weight: bold; margin: 0px; font-size: 13px">
                    <option selected hidden>@item.ProductSize</option>
                    <option value="M">M</option>
                    <option value="S">S</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                    <option value="XXL">XXL</option>
                </select>                
                &nbsp;
                <a href="@Url.Action("getDetail", "Home", new { @ID = item.ProductID })" style="vertical-align: middle;" class="icon-book" title="Chi tiết">&nbsp;Chi tiết</a>
                &nbsp;
                <a href="@Url.Action("DeleteCart", "Cart", new { @ID = item.ProductID })" style="vertical-align: middle;" class="icon-trash" title="Xóa Mặt Hàng">&nbsp;Xóa</a>
            </span>

        </div>

        <div class="price">
            <strong style="color:red;">@String.Format("{0:0,0}", @item.ProductPrice) VND</strong>
        </div>
        <div class="price">
            <input type="submit" class="btn btn-success" value="Cập Nhật" title="Cập Nhật" style="margin-top:4px;height:30px" />
        </div>
    }
</div>
    
}
<div class="summary">
    <div class="line">
        <div class="row-fluid">
            <div class="span6">Tổng Số Lượng:</div>
            <div class="span6 align-right">@ViewBag.TotalCount</div>
        </div>
    </div>
    <div class="line">
        <div class="row-fluid">
            <div class="span6">Tổng Thành Tiền:</div>
            <div class="span6 align-right size-16">@String.Format("{0:0,0}", ViewBag.TotalMoney) VND</div>
        </div>
    </div>
</div>
   

