@model ProjectWebsite.Models.PRODUCT_BRAND

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
@*Thông báo*@
<script src="~/Scripts/Admin/js/jquery.js"></script>
<link href="~/assets/toastr-master/toastr.css" rel="stylesheet" />
<script src="~/assets/toastr-master/toastr.js"></script>
@*Toastr*@
<section id="main-content">
    <section class="wrapper site-min-height">
        <div class="row">
            <span id="Message" class="hidden">@TempData["Message"]</span>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-4">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Brand)

                        <div class="form-group">
                            <div class="col-md-10">
                                <label>Nhập tên thương hiệu:</label>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Cập nhật" class="btn btn-success" />
                                <a class="btn btn-success" href="@Url.Action("Index","ProductBrand")" style="margin-left:10px">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </section>
</section>
<script type="text/javascript">
    $(document).ready(function () {
        var message = $('#Message').text();
        if (message === 'Thất Bại') {
            toastr.warning('Trường tên thương hiệu không được bỏ trống!');
        }
    });
</script>

