@model ProjectWebsite.Models.PRODUCT_TYPE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<section id="main-content">
    <section class="wrapper site-min-height">
        <div class="row">
            <span id="Message" class="hidden">@TempData["Message"]</span>
            <div class="col-lg-4">
                <h4>Bạn có chắc chắn muốn xóa?</h4>
            </div>
            <div class="col-md-10">
                <label>Mã loại:</label>
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Type)
            </div>
            <div class="col-md-10">
                <label>Tên loại:</label>
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TypeName)
            </div>
            <div class="col-md-10">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa loại" style="margin-top:10px" class="btn btn-success" />
                        <a class="btn btn-success" style="margin-top:10px;margin-left:10px" href="@Url.Action("Index","ProductType")">Quay lại</a>
                    </div>
                }
            </div>
        </div>
    </section>
</section>
