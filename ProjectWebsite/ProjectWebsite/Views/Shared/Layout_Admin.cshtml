    <title>Giao diện Admin</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/Admin/bootstrap-reset.css" rel="stylesheet" />
    <link href="~/Content/Admin/bootstrap.min.css" rel="stylesheet" />

    <!--external css-->
    <link href="~/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/assets/fontawesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/Admin/style.css" rel="stylesheet" />
    <link href="~/Content/Admin/style-responsive.css" rel="stylesheet" />
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <!--logo start-->
            <a href="index.html" class="logo">Pingo<span> Shop</span></a>
            <!--logo end-->
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" style="margin-top:5px" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    @Html.Action("InfoAdmin", "Admin")
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li class="sub-menu">
                        <a href="@Url.Action("AdminIndex","Admin")">
                            <i class="fa fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("ProductIndex","Admin")">
                            <i class="fa fa-truck"></i>
                            <span>Quản lý sản phẩm</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="@Url.Action("CustomersIndex","Admin")">
                            <i class="fa fa-users"></i>
                            <span>Quản lý khách hàng</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Index","ProductBrand")">
                            <i class="fa fa-road"></i>
                            <span>Quản lý thương hiệu</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("BillIndex","Admin")">
                            <i class="fa fa-shopping-cart"></i>
                            <span>Quản lý đơn hàng</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Index","ProductSize")">
                            <i class=" fa fa-certificate"></i>
                            <span>Quản lý Size</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="@Url.Action("Index","ProductType")">
                            <i class=" fa fa-tag"></i>
                            <span>Quản lý loại sản phẩm</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Index","ProductSale")">
                            <i class=" fa fa-gift"></i>
                            <span>Quản lý khuyến mãi</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a>
                            <i class=" fa fa-bar-chart-o"></i>
                            <span>Thống kê đơn hàng</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a>
                            <i class=" fa fa-signal"></i>
                            <span>Thống kê khách hàng</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a>
                            <i class=" fa fa-money"></i>
                            <span>Thống kê doanh thu</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a>
                            <i class="fa fa-cog"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="@Url.Action("Index","Home")">
                            <i class="fa fa-sign-in"></i>
                            <span>Trở lại trang web</span>
                        </a>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        @RenderBody()
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer" style="margin-bottom:-20px">
            <div class="text-center">
                2021 &copy; FlatLab by VectorLab.
                <a class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/Admin/js/jquery.js"></script>
    <script src="~/Scripts/Admin/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Scripts/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Scripts/Admin/js/jquery.scrollTo.min.js"></script>
    <script src="~/Scripts/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Scripts/Admin/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>


    <!--right slidebar-->
    <script src="~/Scripts/Admin/js/slidebars.min.js"></script>
    <!--Thông báo-->
    <link href="~/assets/toastr-master/toastr.css" rel="stylesheet" />
    <script src="~/assets/toastr-master/toastr.js"></script>
    <script src="~/Scripts/Setting/message.js"></script>

    <!--Chức năng-->
    <!--common script for all pages-->
    <script src="~/Scripts/Admin/js/common-scripts.js"></script>


