@using ProjectWebsite.Models
@using PagedList.Mvc;
@model PagedList.PagedList<PRODUCT>
@{
    ViewBag.Title = "GetProductWithBrand";
    Layout = "~/Views/Shared/Layout_Product.cshtml";
}

<div id="isotopeContainer" class="isotope-container">
    @foreach (var item in Model)
    {
        if (DateTime.Now.Day - item.DateInsert.Day <= 15 && item.DateInsert.Month ==
                                        DateTime.Now.Month && item.DateInsert.Year == DateTime.Now.Year)
        {
            <div class="span3 isotope--target filter--boots" data-price="58" data-popularity="2" data-size="s|m|l" data-color="orange" data-brand="adidas">
                <div class="product">
                    <div class="product-inner">
                        <div class="stamp green">New</div>
                        <div class="product-img">
                            <div class="picture">
                                <a href="@Url.Action("getDetail","Home",new { id = item.ID})"><img width="540" height="374" alt="" src="~/Content/images/@item.ProductImage" /></a>
                                <div class="img-overlay">
                                    <a class="btn more btn-primary" href="@Url.Action("getDetail","Home",new { id = item.ID})">Chi tiết</a>
                                    <a class="btn buy btn-danger" href="@Url.Action("Addtocart","Cart", new {@ID = item.ID,@strURL = Request.Url.ToString()})">Thêm giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                        <div class="main-titles no-margin">
                            <h4 class="title" style="color:red">@String.Format("{0:0,0}", @item.ProductPrice) VNĐ</h4>
                            <h5 class="no-margin isotope--title">@item.ProductName</h5>
                        </div>
                        <div class="row-fluid hidden-line">
                            <div class="span6">
                                <a href="#" class="btn btn-small"><i class="icon-heart"></i></a>
                                <a href="#" class="btn btn-small"><i class="icon-exchange"></i></a>
                            </div>
                            <div class="span6 align-right">
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="span3 isotope--target filter--boots" data-price="58" data-popularity="2" data-size="s|m|l" data-color="orange" data-brand="adidas">
                <div class="product">
                    <div class="product-inner">
                        <div class="stamp red">Hot</div>
                        <div class="product-img">
                            <div class="picture">
                                <a href="@Url.Action("getDetail","Home",new { id = item.ID})"><img width="540" height="374" alt="" src="~/Content/images/@item.ProductImage" /></a>
                                <div class="img-overlay">
                                    <a class="btn more btn-primary" href="@Url.Action("getDetail","Home",new { id = item.ID})">Chi tiết</a>
                                    <a class="btn buy btn-danger" href="@Url.Action("Addtocart","Cart", new {@ID = item.ID,@strURL = Request.Url.ToString()})">Thêm giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                        <div class="main-titles no-margin">
                            <h4 class="title" style="color:red">@String.Format("{0:0,0}", @item.ProductPrice) VNĐ</h4>
                            <h5 class="no-margin isotope--title">@item.ProductName</h5>
                        </div>
                        <div class="row-fluid hidden-line">
                            <div class="span6">
                                <a href="#" class="btn btn-small"><i class="icon-heart"></i></a>
                                <a href="#" class="btn btn-small"><i class="icon-exchange"></i></a>
                            </div>
                            <div class="span6 align-right">
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                                <span class="icon-star stars-clr"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<hr />
<!--Thanh phân trang-->
<div class="pagination pagination-centered">
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("GetProductWithBrand", new { page = page }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }

        .MenuTrang a {
            color: black;
            font-size: 16px;
            text-align: center;
            width: 50px;
        }
    </style>
</div>

