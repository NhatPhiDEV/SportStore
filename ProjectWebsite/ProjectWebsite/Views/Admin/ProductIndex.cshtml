@{
    ViewBag.Title = "ProductIndex";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<section id="main-content">
    <section class="wrapper site-min-height">
        <section class="panel" style="margin-bottom:0px">
            <header class="panel-heading" style="color:black;font-weight:bold;padding-bottom:0px;text-align:center;font-size:30px">
                Dữ liệu thông tin sản phẩm
            </header>
            <div class="panel-body" style="margin-top:0px;min-height: 800px;">
                <div class="adv-table editable-table">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-1" style="padding-top:15px;padding-left:0">
                                <a class="btn btn-success" id="btnAdd"><i class="fa fa-plus"></i> Thêm mới </a>
                            </div>
                            <div class="col-lg-1" style="padding-top:15px;padding-left:0;">
                                <button class="btn dropdown-toggle" data-toggle="dropdown" style="margin-left: 10px">
                                    Chức năng mở rộng <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Print</a></li>
                                    <li><a href="#">Save as PDF</a></li>
                                    <li><a href="#">Export to Excel</a></li>
                                </ul>
                            </div>

                            <div class="col-lg-6 col-lg-offset-4">
                                <div class="dataTables_filter" id="editable-sample_filter">
                                    <label style="font-size:17px;margin-left:34px;">
                                        Tìm kiếm:
                                        <input type="text" aria-controls="editable-sample" id="txtSearch" style="margin-left:0px;margin-right:20px" placeholder="Nhập điều bạn muốn tìm kiếm vào đây..." class="form-control medium" />
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <table class="table table-striped table-hover table-bordered" id="edi table-sample">
                                <thead>
                                    <tr style="background-color:#2257f3;border: hidden;">
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">STT</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Ảnh</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Tên Sản Phẩm</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Giá thành</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Size</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Loại Sản Phẩm</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Thương Hiệu</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Ngày thêm</th>
                                        <th style="color:#ffffff;font-weight:bold;text-align:center">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody id="tblProduct">
                                    
                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-12" style="margin:0px">
                            <div class="span6 col-lg-offset-6">
                                <div class="dataTables_paginate paging_bootstrap pagination" style="margin:0px;padding:0px">
                                    <ul id="pageNumber">
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</section>
<script src="~/Scripts/Admin/js/jquery.js"></script>
<script src="~/Scripts/Setting/Products.js"></script>

<div class="modal" tabindex="-1" role="dialog" id="modalProduct">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="panel panel-primary">
                <div class="panel-heading" id="modalTitle"></div>
                <div class="panel-body">
                    <input type="text" hidden id="idproduct" value="" />
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>Tên sản phẩm</label>
                                <input type="text" id="txtname" class="form-control" placeholder="Nhập tên sản phẩm..." onkeydown="" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Giá sản phẩm </label>
                                <input type="number" id="txtprice" class="form-control" placeholder="Nhập giá..." min="10000" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>Loại sản phẩm</label>
                                <select class="form-control" id="selecttype"></select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input type="number" id="txtcount" class="form-control required" min="1" placeholder="Nhập số lượng..." />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label>Size</label>
                                <select class="form-control" id="selectsize"></select>
                            </div>
                            <div class="form-group">
                                <label>Thương hiệu</label>
                                <select class="form-control" id="selectbrand"></select>
                            </div>
                            <div class="form-group">
                                <label>Khuyến mãi</label>
                                <select class="form-control" id="selectsale"></select>
                            </div>
                            <div class="form-group">
                                <label>Ngày nhập</label>
                                <input type="date" class="form-control required" id="dateStart" />
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="form-group">
                                <label>Thêm ảnh</label>
                                <input type="file" class="form-control" id="fileUpload" onchange="LoadImage(this)" required />
                            </div>
                            <img src="~/Content/images/addImg.png" style="width:320px;height:280px" id="previewImage" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveData()" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" onclick="CloseModel()" id="btnExit">Quay Lại</button>
            </div>
        </div>
    </div>
</div>